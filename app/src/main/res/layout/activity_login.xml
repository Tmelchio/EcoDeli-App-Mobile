<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D3D3D3"
    android:gravity="center_horizontal"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- Conteneur noir -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_dark_bg"
                android:padding="20dp"
                android:gravity="center_horizontal"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bienvenue sur EcoDeli"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Boutons Onglets -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp">

                    <Button
                        android:id="@+id/btnConnexion"
                        android:layout_width="wrap_content"
                        android:minWidth="120dp"
                        android:paddingHorizontal="12dp"
                        android:layout_height="40dp"
                        android:text="Connexion"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/btn_green_border"
                        app:backgroundTint="@null"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/btnInscription"
                        android:layout_width="wrap_content"
                        android:minWidth="120dp"
                        android:paddingHorizontal="12dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/btn_green"
                        android:text="Inscription"
                        android:textColor="#000000"
                        app:backgroundTint="@null" />
                </LinearLayout>

                <!-- Formulaire de connexion -->
                <LinearLayout
                    android:id="@+id/layoutConnexion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_light_green"
                    android:padding="16dp"
                    android:maxWidth="600dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E-mail"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/loginEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="exemple@ecodeli.fr"
                        android:inputType="textEmailAddress"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:background="@drawable/edittext_background"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="10dp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mot de passe"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/loginPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mot de passe"
                        android:inputType="textPassword"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:background="@drawable/edittext_background"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="10dp"
                        android:layout_marginBottom="12dp" />

                    <Button
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Se connecter"
                        android:background="@drawable/btn_green"
                        app:backgroundTint="@null"
                        android:textColor="#000000"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Formulaire d'inscription -->
                <LinearLayout
                    android:id="@+id/layoutInscription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:background="@drawable/rounded_light_green"
                    android:padding="16dp"
                    android:maxWidth="600dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nom"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/etNom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Votre nom"
                        android:background="@drawable/edittext_background"
                        android:textColor="#000000"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="10dp"
                        android:layout_marginBottom="12dp" />

                    <Button
                        android:id="@+id/btnRegister"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="S'inscrire"
                        android:background="@drawable/btn_green"
                        app:backgroundTint="@null"
                        android:textColor="#000000"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- NFC bouton centrÃ© -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ou connectez-vous avec NFC"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <ImageView
                    android:id="@+id/nfcButton"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/nfc"
                    android:background="@drawable/circle_green"
                    android:padding="12dp"
                    android:contentDescription="Connexion NFC"
                    android:clickable="true"
                    android:focusable="true"
                    app:backgroundTint="@null" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>