<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_dark_bg"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nouvelle Commande"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_light_green"
        android:padding="16dp">

        <!-- CommerÃ§ant -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CommerÃ§ant / Magasin"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etCommercant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ex: Pharmacie Central, Boulangerie Paul..."
            android:textColor="#000000"
            android:textSize="14sp"
            android:background="@drawable/edittext_background"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="4dp" />

        <!-- Type de service FIXE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type de service"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTypeService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“¦ Livraison"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/edittext_background"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical" />

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description de la commande"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ex: MÃ©dicaments, courses alimentaires, colis..."
            android:textColor="#000000"
            android:textSize="14sp"
            android:background="@drawable/edittext_background"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="4dp"
            android:minLines="2" />

        <!-- Montant -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Montant de la commande"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etMontant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ex: 25.50"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:textSize="14sp"
            android:background="@drawable/edittext_background"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="4dp" />

        <!-- Adresse de livraison -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adresse de livraison"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etAdresse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ex: 123 Rue de la Paix, 75001 Paris"
            android:textColor="#000000"
            android:textSize="14sp"
            android:background="@drawable/edittext_background"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="4dp"
            android:minLines="2" />

        <!-- Options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <CheckBox
                android:id="@+id/cbUrgent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Livraison urgente"
                android:textColor="#000000"
                android:textSize="12sp"
                android:layout_marginEnd="16dp" />

            <CheckBox
                android:id="@+id/cbAssurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assurance colis"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Boutons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnAnnuler"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Annuler"
                android:background="@drawable/btn_green_border"
                android:textColor="#00C853"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnCreer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CrÃ©er"
                android:background="@drawable/btn_green"
                android:textColor="#000000"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>